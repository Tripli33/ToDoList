@using ToDoList.Domain.Enums
@model ToDoList.Domain.Entities.Task
@{
    ViewData["Title"] = "Task Form";
}
<h1>ADD TASK</h1>
<form asp-action="TaskForm" method="post">
    <div>
        <input asp-for="Id" type="hidden"/>
    </div>
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title"/>
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Description">Description:</label>
        <input asp-for="Description"/>
        <p><i>Can be empty</i></p>
    </div>
    <div>
        <label asp-for="DeadLine">Dead line:</label>
        <input asp-for="DeadLine" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
    </div>
    <div>
        <select asp-for="Priority" asp-items="Html.GetEnumSelectList<Priority>()"></select>
    </div>
    <div>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()"></select>
    </div>
    <button type="submit">Confirm</button>
    <button asp-action="Index">Back</button>
</form>
