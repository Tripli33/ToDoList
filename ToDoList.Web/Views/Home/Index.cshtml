@model IQueryable<ToDoList.Domain.Entities.Task>
@{
    ViewData["Title"] = "Index";
}
<form>
    <h1>TASK LIST</h1>
    <button asp-action="TaskForm">Add task</button>
</form>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Dead line</th>
            <th>Priority</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DeadLine.ToString("dd MMM yyyy h:mm tt")</td>
                <td>@task.Priority</td>
                <td>@task.Status</td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>



